{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*",
		"./__tests__/**/*",
		"react-app-env.d.ts"
	],
	"exclude": [
		"build",
		"node_modules/**",
		"scripts",
	]
}